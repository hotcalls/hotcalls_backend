# Django Core Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
TIME_ZONE=Europe/Berlin

# Security Settings (Production)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=hotcalls_db
DB_USER=hotcalls_user
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration for Celery
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password

# Celery Configuration
CELERY_BROKER_URL=redis://:your-redis-password@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:your-redis-password@localhost:6379/0

# LiveKit Configuration
LIVEKIT_URL=wss://your-livekit-instance.livekit.cloud
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret
LIVEKIT_AGENT_NAME=your-agent-name
TRUNK_ID=your-sip-trunk-id
SIP_PROVIDER=jambonz

# Azure Storage Configuration
AZURE_ACCOUNT_NAME=your-storage-account-name
AZURE_STORAGE_KEY=your-storage-key
AZURE_STATIC_CONTAINER=static
AZURE_MEDIA_CONTAINER=media
AZURE_CUSTOM_DOMAIN=your-cdn-endpoint.azureedge.net

# Azure Key Vault Configuration
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_CLIENT_ID=your-managed-identity-client-id

# Application Insights
AZURE_MONITOR_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=your-endpoint

# CORS Settings
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com

# API Configuration
BASE_URL=https://your-api-domain.com

# Logging
DJANGO_LOG_LEVEL=INFO

# Environment
ENVIRONMENT=development 